---
import about from "../../contents/about.yaml";
import Skill from "./Skill.astro";

import settings from "./../../config/settings.yaml";
---

<section
    id="about"
    style={`padding-bottom: ${settings.vertical_spacing}px;`}
    class={`container gap-4 px-4 text-base-100 mx-auto flex flex-col items-center justify-center`}
>
    <div class="max-w-2xl mb-8 space-y-16">
        <h2 class="text-2xl md:text-4xl text-secondary font-bold text-center">
            {about.about_title}
        </h2>
        <p class="text-md md:text-lg text-center whitespace-pre-wrap">
            {about.about_description}
        </p>
    </div>
</section>
